{
  "manifest_version": 2,
  "name": "Craptalism",
  "version": "1.0.0",
  "description": "Replaces instances of 'capitalism' with 'craptalism' in website content.",
  "icons": {
    "48": "icons/craptalism-48.png"
  },
  "permissions": [
    "activeTab",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["craptalism.js"]
    }
  ]
}
